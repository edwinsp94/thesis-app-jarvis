<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/FragmentGrabar_linearLayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/FragmentGrabar_imageView_grabando"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_record_red" />

            <TextView
                android:id="@+id/FragmentGrabar_textView_grabando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grabando..."
                android:textColor="@color/md_black_1000" />
        </LinearLayout>

        <TextView
            android:id="@+id/FragmentGrabar_textView_tiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/md_black_1000"
            android:textSize="100sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/FragmentGrabar_imageView_estado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/FragmentGrabar_textView_nombre_archivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/FragmentGrabar_linearLayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/md_grey_350"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/FragmentGrabar_imageButton_descartar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/ic_cancel" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/md_divider" />

            <ImageButton
                android:id="@+id/FragmentGrabar_imageButton_guardar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/ic_done" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_350"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/md_grey_350"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/FragmentGrabar_imageButton_grabar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/ic_record_red" />

            <ImageButton
                android:id="@+id/FragmentGrabar_imageButton_reproducir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/ic_play_white" />

            <ImageButton
                android:id="@+id/FragmentGrabar_imageButton_detener"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/ic_list" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>